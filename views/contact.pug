form.contactUs(action='contactSubmit' method='post' class="contactForm" id="contactForm")
  .formRow
    label(for="name") NAME : 
    input(type="text" name="name" id="name" placeholder="Enter Your Name")

  .formRow
    label(for="email") E-MAIL : 
    input(type="text" name="email" id="email" placeholder="Enter Your E-mail")

  .formRow
    label(for="number") PHONE-NUMBER : 
    input(type="text" name="number" id="number" placeholder="Enter Your Phone Number")

  .formRow
    label(for="message") MESSAGE : 
    textarea(name="message" id="message" placeholder="Enter Your Message")

  .formRow
    button(form="contactForm" class="submitButton") SUBMIT 
        i(class="fa fa-paper-plane" aria-hidden="true")
